    printf "\x1B[01;93m========== Ensure keys exist ==========\n\x1B[0m"
    # Create .ssh/ if it doesn't exist
    [ -d $VL_USR_HOME/.ssh/ ] || mkdir $VL_USR_HOME/.ssh
    # Generate passwordless keys if they don't exist
    [ -f $VL_USR_HOME/.ssh/id_rsa ] || ssh-keygen -N "" -f $VL_USR_HOME/.ssh/id_rsa
    # Create an authorized_keys file if it doesn't exist
    [ -f $VL_USR_HOME/.ssh/authorized_keys ] || touch $VL_USR_HOME/.ssh/authorized_keys
    # Add our key to it if it is not present
    KEY=$(cat $VL_USR_HOME/.ssh/id_rsa.pub)
    grep -Fxq "$KEY" $VL_USR_HOME/.ssh/authorized_keys || cat $VL_USR_HOME/.ssh/id_rsa.pub >> $VL_USR_HOME/.ssh/authorized_keys
